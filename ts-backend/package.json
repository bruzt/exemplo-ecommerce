{
  "name": "ts-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run dev:queue & npm run dev:server",
    "dev:server": "cross-env NODE_ENV=development ts-node-dev --transpile-only --ignore-watch node_modules --respawn src/server.ts",
    "dev:queue": "cross-env NODE_ENV=development ts-node-dev --transpile-only --ignore-watch node_modules --respawn src/queue.ts",
    "test:queue": "cross-env NODE_ENV=test ts-node-dev --transpile-only --ignore-watch node_modules --respawn src/queue.ts",
    "build": "rimraf ./build && tsc && npm run copy-views",
    "preprod": "cross-env NODE_ENV=production typeorm migration:run",
    "prod": "npm run prod:queue && npm run prod:server",
    "prod:server": "cross-env NODE_ENV=production pm2 start --name ecommerce-backend -i 2 build/src/server.js",
    "prod:queue": "cross-env NODE_ENV=production pm2 start --name ecommerce-queue build/src/queue.js",
    "postprod": "pm2 logs",
    "start": "npm run build && npm run prod",
    "dev:migration:run": "cross-env NODE_ENV=development ts-node-dev ./node_modules/typeorm/cli.js migration:run",
    "pretest": "cross-env NODE_ENV=test ts-node-dev ./node_modules/typeorm/cli.js migration:run",
    "test": "npm run test:queue & cross-env NODE_ENV=test jest",
    "copy-views": "copyfiles ./src/views/**/* ./build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bull": "^3.15.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/multer": "^1.4.5",
    "@types/node": "^16.3.1",
    "@types/nodemailer": "^6.4.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.28.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "socket.io-client": "^4.1.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "bull": "^3.22.11",
    "celebrate": "^13.0.4",
    "concurrently": "^6.2.0",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "frete": "^0.3.1",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.5.0",
    "pagarme": "^4.15.3",
    "pg": "^8.5.1",
    "pm2": "^5.1.0",
    "socket.io": "^4.1.2",
    "sonic-channel": "^1.2.6",
    "typeorm": "^0.2.32"
  }
}
