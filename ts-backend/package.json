  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --transpile-only --ignore-watch node_modules --respawn src/server.ts",
    "build": "rimraf ./build && tsc",
    "prod": "cross-env NODE_ENV=production pm2 start --name ecommerce-backend -i max build/src/server.js",
